@model AsiaticIndustries.Core.Models.ViewModel.DashboardModel
@using AsiaticIndustries.Core.Resources
@using AsiaticIndustries.Core.Models.ViewModel
@using AsiaticIndustries.Core.Infrastructure
@{
    ViewBag.Title = string.Format("{0} {1}", Resource.AsiaticIndustries, "Dashboard");
    Layout = null;
    int count = 0;
}

<section class="content">
    <div class="row">
        
        <div class="col-md-3">
            <div class="sm-st clearfix">
                <span class="sm-st-icon st-green"><i class="fa fa-file-o"></i></span>
                <div class="sm-st-info">
                    <span>@Model.TotalActiveQuote</span>
                    Total Quote
                </div>
            </div>
        </div>
    </div>
    @if (Model.USDMasterList.Count > 0)
    {
        <div id="jqChart" style="width: 100%; height: 370px;" class="margin-bottom-5"></div>
    }
    
    @{  count = 0; }
    @if (Model.QuoteList.Count > 0)
    {
        <div class="row  margin-top-20">
            <div class="col-md-12">
                <section class="panel">
                    <header class="panel-heading font-white" style="background-color: #27C24C">
                        Last 10 Quote List
                    </header>
                    <div class="panel-body table-responsive">
                        <table class="table table-striped table-hover">
                            <tbody>
                                <tr>
                                    <th>#</th>
                                    <th>Customer Name</th>
                                    <th>Samples</th>
                                    <th>Packing</th>
                                    <th>Freight</th>
                                    <th>Forw.</th>
                                    <th>Int.</th>
                                    <th>NETT</th>
                                    <th>$RATE</th>
                                    <th>IN USD</th>
                                </tr>
                                @foreach (var quote in Model.QuoteList)
                                {
                                    count = count + 1;
                                    <tr>
                                        <td>@count</td>
                                        <td>@quote.CustomerName</td>
                                        <td>@quote.ProductSamples</td>
                                        <td>@quote.TotalPackingCost</td>
                                        <td>@quote.TotalFreightCost</td>
                                        <td>@quote.TotalForwardingCost</td>
                                        <td>@quote.TotalInterest</td>
                                        <td>@quote.FinalPrice</td>
                                        <td>@quote.USDRate</td>
                                        <td>@quote.TotalNettInUSD</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="panel-footer bg-white">
                            <a class="btn btn-info btn-sm pull-right" href="@Constants.NgReturnUrl_ListQuote" style="background-color: #27C24C;">View All Quote</a>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    }
</section>



                                                data_ng_model = "rawmaterial.RawMaterialPrice",
                                                data_ng_attr_id = "{{ 'RawMaterialPriceTable1-' + $index }}",
                                                data_ng_attr_name = "{{ 'RawMaterialPriceTable1-' + $index }}",
                                                @class = "form-control",
                                                name = "RawMaterialPrice",
                                                placeholder = "Price",
                                                focus = "true",
                                                spacenotonfirst = "",
                                                maxlength = "13",
                                                style = "width: 65px"
                                            })

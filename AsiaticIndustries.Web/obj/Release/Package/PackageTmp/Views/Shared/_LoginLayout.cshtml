@using System.Web.Optimization
@using AsiaticIndustries.Core.Infrastructure
@using AsiaticIndustries.Core.Resources
<!doctype html>
<html class="no-js" lang="en">
<style>
    #toast-container > div {
        margin-top: 20px !important;
    }
</style>
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <meta name="description" content="">
    <meta name="keywords" content="AsiaticIndustries">
    @*<link rel='shortcut icon' href='../../favicon.ico' type='image/x-icon' />*@
    <meta name="apple-mobile-web-app-capable" content="yes">

    <script type="text/javascript">
        window.PageSize = parseInt('@ConfigSettings.PageSize');
        window.BasePath = '@ConfigSettings.BasePath';
    </script>

    @Styles.Render("~/loginlayout/css")
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
        <![endif]-->

    @Scripts.Render("~/loginlayout/js")
    @Scripts.Render("~/assets/js/viewjs/securityapp/controllerjs")



    <style>
        body {
            background: #283744 !important;
        }
    </style>
</head>

<body class="login" data-ng-app="app">
    <span data-us-spinner="{radius:30, width:8, length: 16,scale:0.5}"></span>
    <div class="logo">
            <img alt="" src="/Assets/images/logo.png">
    </div>
    @RenderBody()
    <div class="copyright">
        Copyright &copy Asiatic Industries, 2015
    </div>
</body>

<script type="text/javascript">
    window.SiteTitleName = '@Resource.AsiaticIndustries';
</script>
</html>

@using AsiaticIndustries.Core.Resources
@model AsiaticIndustries.Core.Models.ViewModel.LoginModel

@{
    ViewBag.Title = string.Format("{0}{1}",Resource.AsiaticIndustries, @"Login");
    Layout = "../Shared/_LoginLayout.cshtml";
}

<div class="content" data-ng-controller="LoginController">
    <form class="login-form" id="frmLogin" name="frmLogin" novalidate>
        <h3 class="form-title">Sign In</h3>
        <div class="form-group">
            @*<input class="form-control" type="text" autocomplete="off" placeholder="Email" name="email" />*@
            @Html.TextBoxFor(m => m.Email, new { data_ng_model = "LoginModel.Email", placeholder = "Email", @class = "form-control bg-white", maxlength = 30, name = "Email" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="form-group">
            @*<input class="form-control" type="password" autocomplete="off" placeholder="Password" name="password" />*@
            @Html.PasswordFor(m => m.Password, new { data_ng_model = "LoginModel.Password", placeholder = "Password", @class = "form-control bg-white", maxlength = 30, name = "password" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        @* <div class="form-group">
            <label class="rememberme check">
                <input type="checkbox" name="remember" value="1" />&nbsp;Keep me signed in
            </label>
        </div>*@

        <div class="form-group">
            <div class="checkbox">
                <input type="checkbox" id="IsRemember" data-ng-model="LoginModel.IsRemember"> 
                <label for="IsRemember" class="check">Keep me signed in</label>
            </div>
        </div>

        <div class="form-actions form-group">
            <button type="submit" class="btn btn-info" data-ng-click="Login()">Log in</button>
        </div>
        <div class="create-account form-group">
            <p>&nbsp;</p>
        </div>
    </form>
</div>
<script type="text/javascript">
    var pageTitle = '@ViewBag.Title';
</script>